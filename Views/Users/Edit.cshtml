@model ClashArt.Models.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
    Layout = null; // Setat null pentru a păstra designul tău complet
}

<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"] - ClashArt</title>
    <div asp-validation-summary="All" class="text-red-500"></div>

    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#e506d6",
                        "neon-green": "#39FF14",
                        "background-light": "#f8f5f8",
                        "background-dark": "#121212",
                        "surface-dark": "#1E1E1E",
                        "border-dark": "#333333"
                    },
                    fontFamily: {
                        "display": ["Space Grotesk", "sans-serif"],
                        "sans": ["Space Grotesk", "sans-serif"]
                    },
                    boxShadow: {
                        'neon-pink': '0 0 10px rgba(229, 6, 214, 0.5), 0 0 20px rgba(229, 6, 214, 0.3)',
                        'neon-green': '0 0 10px rgba(57, 255, 20, 0.5), 0 0 20px rgba(57, 255, 20, 0.3)',
                    },
                },
            },
        }
    </script>
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-white antialiased selection:bg-primary selection:text-white">
    <div class="relative flex min-h-screen w-full flex-col overflow-x-hidden">

        <header class="sticky top-0 z-50 flex items-center justify-between whitespace-nowrap border-b border-solid border-b-gray-200 dark:border-b-[#333333] px-6 py-4 bg-white/80 dark:bg-[#121212]/90 backdrop-blur-md">
            <div class="flex items-center gap-4">
                <a href="/" class="flex items-center gap-3 text-white hover:opacity-90 transition-opacity">
                    <div class="flex items-center justify-center size-8 rounded bg-primary/20 text-primary">
                        <span class="material-symbols-outlined text-2xl">swords</span>
                    </div>
                    <h2 class="text-white text-xl font-display font-bold leading-tight tracking-[-0.015em]">ClashArt</h2>
                </a>
            </div>
        </header>

        <main class="flex-1 flex justify-center py-10 px-4 md:px-0">
            <div class="w-full max-w-2xl flex flex-col gap-6">

                <div class="flex items-center gap-4 px-4">
                    <a asp-action="Profile" asp-controller="Users" class="text-gray-400 hover:text-white transition-colors">
                        <span class="material-symbols-outlined text-3xl">arrow_back</span>
                    </a>
                    <h1 class="text-3xl md:text-4xl font-bold tracking-tight uppercase bg-gradient-to-r from-white to-gray-400 bg-clip-text text-transparent">Edit Profile</h1>
                </div>

                <div class="bg-white dark:bg-surface-dark rounded-xl border border-gray-200 dark:border-border-dark p-6 md:p-8 shadow-2xl relative overflow-hidden">

                    <div class="absolute -top-24 -right-24 w-48 h-48 bg-primary/20 blur-[80px] rounded-full pointer-events-none"></div>

                    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="flex flex-col gap-8 relative z-10">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="flex flex-col items-center gap-6 pb-6 border-b border-gray-100 dark:border-border-dark">

                            <input asp-for="ProfileImage" type="file" id="profile-upload" class="hidden" accept="image/*" onchange="previewImage(event)" />

                            <label for="profile-upload" class="relative group cursor-pointer">
                                <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-gray-100 dark:border-gray-800 group-hover:border-primary transition-colors duration-300 shadow-lg">
                                    <img id="avatar-preview"
                                         src="@(Model.AvatarUrl ?? "https://placehold.co/400")"
                                         alt="Profile Avatar"
                                         class="w-full h-full object-cover" />
                                </div>

                                <div class="absolute inset-0 flex items-center justify-center rounded-full bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 backdrop-blur-sm">
                                    <span class="material-symbols-outlined text-white text-3xl">photo_camera</span>
                                </div>

                                <div class="absolute bottom-1 right-1 bg-primary text-white p-1.5 rounded-full shadow-lg border-2 border-surface-dark flex items-center justify-center">
                                    <span class="material-symbols-outlined text-sm font-bold">edit</span>
                                </div>
                            </label>

                            <div class="text-center">
                                <h3 class="text-lg font-bold text-slate-900 dark:text-white">@Model.DisplayName</h3>
                                <label for="profile-upload" class="text-sm text-primary font-medium cursor-pointer hover:underline mt-1 block">Change Profile Picture</label>
                            </div>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm font-bold bg-red-500/10 p-4 rounded-lg border border-red-500/20"></div>

                        <div class="space-y-6">

                            <div class="flex flex-col gap-2">
                                <label asp-for="DisplayName" class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider ml-1">Codename / Display Name</label>
                                <div class="relative group">
                                    <div class="absolute inset-0 bg-gradient-to-r from-primary to-purple-600 rounded-lg blur opacity-0 group-focus-within:opacity-20 transition-opacity duration-500"></div>
                                    <input asp-for="DisplayName" class="relative w-full bg-gray-50 dark:bg-[#121212] border border-gray-200 dark:border-[#333333] rounded-lg px-4 py-3 text-slate-900 dark:text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all duration-300" placeholder="Enter your display name" />
                                    <span class="material-symbols-outlined absolute right-4 top-3.5 text-gray-500 dark:text-gray-600">person</span>
                                </div>
                                <span asp-validation-for="DisplayName" class="text-red-500 text-xs mt-1"></span>
                            </div>

                            <div class="flex flex-col gap-2">
                                <label asp-for="Bio" class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider ml-1">Manifesto / Bio</label>
                                <div class="relative group">
                                    <div class="absolute inset-0 bg-gradient-to-r from-primary to-purple-600 rounded-lg blur opacity-0 group-focus-within:opacity-20 transition-opacity duration-500"></div>
                                    <textarea asp-for="Bio" id="bio-input" rows="4" maxlength="240" oninput="updateCharCount(this)"
                                              class="relative w-full bg-gray-50 dark:bg-[#121212] border border-gray-200 dark:border-[#333333] rounded-lg px-4 py-3 text-slate-900 dark:text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all duration-300 resize-none"
                                              placeholder="Tell your story..."></textarea>
                                </div>
                                <div class="flex justify-end">
                                    <span id="char-count" class="text-xs text-gray-400 dark:text-gray-600 font-mono">0 / 240</span>
                                </div>
                                <span asp-validation-for="Bio" class="text-red-500 text-xs"></span>
                            </div>

                        </div>

                        <div class="bg-gray-50 dark:bg-[#121212] rounded-lg p-5 border border-gray-200 dark:border-[#333333] flex items-center justify-between gap-4 group hover:border-neon-green/30 transition-colors duration-300">
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-1">
                                    <span class="material-symbols-outlined text-neon-green text-xl">security</span>
                                    <h4 class="text-base font-bold text-slate-900 dark:text-white">Private Profile</h4>
                                </div>
                                <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Hide your 'Training Grounds' sketches from public leaderboards. Only final submissions will be visible.</p>
                            </div>

                            <label class="relative inline-flex items-center cursor-pointer">
                                <input asp-for="IsPrivate" type="checkbox" class="sr-only peer" />
                                <div class="w-14 h-7 bg-gray-700 peer-focus:outline-none rounded-full peer dark:bg-gray-800 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:left-[4px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all dark:border-gray-600 peer-checked:bg-neon-green peer-checked:shadow-neon-green"></div>
                                <span class="ml-3 text-sm font-bold text-gray-900 dark:text-gray-300 peer-checked:text-neon-green transition-colors">ON</span>
                            </label>
                        </div>

                        <div class="pt-4 flex flex-col gap-4">
                            <button type="submit" class="w-full py-4 px-6 rounded-lg bg-gradient-to-r from-primary to-[#b004a4] hover:from-[#c405b7] hover:to-[#96038c] text-white font-bold text-base uppercase tracking-widest shadow-lg hover:shadow-neon-pink transform hover:-translate-y-0.5 transition-all duration-300 flex items-center justify-center gap-2 group">
                                <span>Save Changes</span>
                                <span class="material-symbols-outlined group-hover:translate-x-1 transition-transform">arrow_forward</span>
                            </button>

                            <a asp-action="Profile" asp-controller="Users" class="w-full text-center text-gray-500 dark:text-gray-500 hover:text-slate-900 dark:hover:text-white text-sm font-medium transition-colors py-2 uppercase tracking-wide">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>

    <script>
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function(){
                const output = document.getElementById('avatar-preview');
                output.src = reader.result;
            };
            if(event.target.files.length > 0) {
                reader.readAsDataURL(event.target.files[0]);
            }
        }

        // 2. Character Count Logic
        function updateCharCount(val) {
            var len = val.value.length;
            var counter = document.getElementById('char-count');
            counter.innerHTML = len + " / 240";
        }

        // Initialize char count on page load
        document.addEventListener("DOMContentLoaded", function() {
            var bioInput = document.getElementById('bio-input');
            if(bioInput) {
                updateCharCount(bioInput);
            }
        });
    </script>
</body>
</html>