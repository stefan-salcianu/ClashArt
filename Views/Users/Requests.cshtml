@model IEnumerable<ClashArt.Models.Follow>

@{
    ViewData["Title"] = "Battle Requests";
}

<div class="max-w-3xl mx-auto px-4 py-8">

    <div class="flex items-center gap-4 mb-8">
        <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center border border-primary/20 shadow-[0_0_15px_rgba(229,6,214,0.2)]">
            <span class="material-symbols-outlined text-primary text-2xl">notifications_active</span>
        </div>
        <div>
            <h1 class="text-2xl font-bold text-white tracking-tight">Follow Requests</h1>
            <p class="text-gray-400 text-sm">Warriors waiting to enter your arena.</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="flex flex-col items-center justify-center py-20 text-center bg-white/5 rounded-2xl border border-white/5 border-dashed">
            <div class="w-20 h-20 bg-white/5 rounded-full flex items-center justify-center mb-4">
                <span class="material-symbols-outlined text-4xl text-gray-600">done_all</span>
            </div>
            <h3 class="text-lg font-bold text-white">All caught up!</h3>
            <p class="text-gray-500 text-sm max-w-xs mt-2">
                No warriors are knocking at your gate right now. Focus on your art.
            </p>
        </div>
    }
    else
    {
        // --- LISTA CU CERERI ---
        <div class="flex flex-col gap-4">
            @foreach (var request in Model)
            {
                <div class="group flex flex-col sm:flex-row sm:items-center justify-between gap-4 p-4 bg-white/5 hover:bg-white/10 border border-white/10 hover:border-primary/30 rounded-xl transition-all duration-300">

                    <a asp-controller="Users" asp-action="Profile" asp-route-id="@request.FollowerId" class="flex items-center gap-4 group/user">
                        <div class="relative">
                            <img src="@(request.Follower.AvatarUrl ?? "https://placehold.co/100")"
                                 class="w-12 h-12 rounded-full object-cover border border-white/10 group-hover/user:border-primary transition-colors" />
                            <div class="absolute -bottom-1 -right-1 bg-[#121212] rounded-full p-0.5">
                                <span class="material-symbols-outlined text-[14px] text-primary">lock</span>
                            </div>
                        </div>

                        <div>
                            <h4 class="font-bold text-white text-base group-hover/user:text-primary transition-colors">
                                @(request.Follower.DisplayName ?? request.Follower.UserName)
                            </h4>
                            <div class="flex items-center gap-2 text-xs text-gray-400">
                                <span>LVL @request.Follower.Level</span>
                                <span class="w-1 h-1 rounded-full bg-gray-600"></span>
                                <span>@request.CreatedAt.ToString("MMM dd")</span>
                            </div>
                        </div>
                    </a>

                    <div class="flex items-center gap-3 w-full sm:w-auto mt-2 sm:mt-0">

                        <form asp-controller="Users" asp-action="DeclineRequest" asp-route-followerId="@request.FollowerId" method="post" class="flex-1 sm:flex-none">
                            <button type="submit" class="flex items-center justify-center gap-2 w-full sm:w-auto px-4 py-2 rounded-lg border border-white/10 text-gray-400 hover:bg-red-500/10 hover:text-red-500 hover:border-red-500/50 transition-all text-sm font-bold">
                                <span class="material-symbols-outlined text-[18px]">close</span>
                                <span class="sm:hidden">Decline</span>
                            </button>
                        </form>

                        <form asp-controller="Users" asp-action="AcceptRequest" asp-route-followerId="@request.FollowerId" method="post" class="flex-1 sm:flex-none">
                            <button type="submit" class="flex items-center justify-center gap-2 w-full sm:w-auto px-6 py-2 rounded-lg bg-primary hover:bg-primary/90 text-white shadow-neon hover:scale-105 transition-all text-sm font-bold">
                                <span class="material-symbols-outlined text-[18px]">check</span>
                                <span>Accept</span>
                            </button>
                        </form>
                    </div>

                </div>
            }
        </div>
    }
</div>