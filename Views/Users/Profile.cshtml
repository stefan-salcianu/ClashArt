@using Microsoft.AspNetCore.Identity
@model ClashArt.Models.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = Model.DisplayName;
}

<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"] - ClashArt</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Noto+Sans:wght@400;500;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: { "primary": "#e506d6", "background-light": "#f8f5f8", "background-dark": "#121212", "card-dark": "#1e1e1e", "neon-glow": "#e506d6" },
                    fontFamily: { "display": ["Space Grotesk", "sans-serif"], "body": ["Noto Sans", "sans-serif"] },
                },
            },
        }
    </script>
    <style>
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #121212;
        }

        ::-webkit-scrollbar-thumb {
            background: #333;
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #e506d6;
            }
    </style>
</head>

<body class="bg-background-light dark:bg-background-dark font-display text-white overflow-x-hidden min-h-screen flex flex-col">

    <main class="flex-1 w-full max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8 py-8 flex flex-col gap-8">

        <div class="w-full rounded-2xl overflow-hidden relative min-h-[300px] md:min-h-[380px] shadow-2xl border border-white/5 group">
            <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                 style='background-image: url("https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe?q=80&w=2564&auto=format&fit=crop");'>
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-[#121212] via-[#121212]/40 to-transparent"></div>
            <div class="absolute top-4 right-4 bg-black/60 backdrop-blur-md rounded-full px-4 py-1.5 border border-primary/30 flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                <span class="text-xs font-medium text-white/90">Online in Arena</span>
            </div>
        </div>

        <div class="relative -mt-24 px-4 md:px-8">
            <div class="flex flex-col md:flex-row gap-6 md:items-end">
                <div class="relative group/avatar">
                    <div class="w-32 h-32 md:w-40 md:h-40 rounded-full border-4 border-[#121212] relative z-10 overflow-hidden bg-[#2a2a2a] shadow-[0_0_20px_rgba(229,6,214,0.3)]">
                        <img src="@(Model.AvatarUrl ?? "https://placehold.co/400")" class="w-full h-full object-cover" alt="@Model.DisplayName Avatar" />
                    </div>
                    <div class="absolute -bottom-2 -right-2 md:right-0 z-20 bg-[#121212] rounded-full p-1">
                        <div class="bg-gradient-to-tr from-primary to-purple-600 text-white text-xs font-bold px-3 py-1 rounded-full border border-white/20 shadow-lg">
                            LVL @Model.Level
                        </div>
                    </div>
                </div>

                <div class="flex-1 flex flex-col gap-2 pb-2">
                    <div class="flex flex-col md:flex-row md:items-center gap-3">
                        <h1 class="text-3xl md:text-4xl font-bold text-white tracking-tight">@Model.DisplayName</h1>
                        <div class="flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 border border-primary/30 text-primary shadow-[0_0_10px_rgba(229,6,214,0.15)] w-fit">
                            <span class="material-symbols-outlined text-sm">verified</span>
                            <span class="text-xs font-bold uppercase tracking-wider">Art Warlord</span>
                        </div>
                    </div>
                    <p class="text-gray-400 max-w-2xl text-base font-light">
                        @(Model.Bio ?? "Acest artist este un mister. Încă nu și-a scris povestea.")
                    </p>
                </div>

                <div class="flex pb-2 gap-3">
                    @if (Model.IsCurrentUser)
                    {
                        <a asp-controller="Users" asp-action="Edit" class="group relative flex items-center justify-center gap-2 overflow-hidden rounded-xl bg-white/10 border border-white/20 px-8 py-3 text-white font-bold transition-all hover:bg-white/20 hover:scale-105 active:scale-95 w-full md:w-auto no-underline">
                            <span class="material-symbols-outlined relative z-10">edit</span>
                            <span class="relative z-10 tracking-wider">EDIT PROFILE</span>
                        </a>
                        <a asp-controller="Users" asp-action="Requests" class="group relative flex items-center justify-center gap-2 overflow-hidden rounded-xl bg-white/5 border border-white/10 px-6 py-3 text-white font-bold transition-all hover:bg-primary/20 hover:border-primary/50 hover:text-primary active:scale-95 flex-1 md:flex-none md:w-auto no-underline">
                            <span class="material-symbols-outlined relative z-10 text-[20px]">notifications_active</span>
                            <span class="relative z-10 tracking-wider text-sm">REQUESTS</span>
                            <span class="absolute top-3 right-3 w-2 h-2 rounded-full bg-primary animate-pulse"></span>
                        </a>
                    }
                    else if (Model.IsPending)
                    {
                        <form asp-controller="Users" asp-action="Unfollow" asp-route-userId="@Model.Id" method="post" class="w-full md:w-auto">
                            <button type="submit" class="group relative flex items-center justify-center gap-2 overflow-hidden rounded-xl bg-gray-800/80 border border-gray-700 px-8 py-3 text-gray-400 font-bold transition-all hover:bg-red-900/20 hover:text-red-400 hover:border-red-900/50 active:scale-95 w-full">
                                <span class="material-symbols-outlined relative z-10">pending</span>
                                <span class="relative z-10 tracking-wider">REQUESTED</span>
                            </button>
                        </form>
                    }
                    else if (Model.IsFollowing)
                    {
                        <form asp-controller="Users" asp-action="Unfollow" asp-route-userId="@Model.Id" method="post" class="w-full md:w-auto">
                            <button type="submit" class="group relative flex items-center justify-center gap-2 overflow-hidden rounded-xl bg-transparent border border-white/20 px-8 py-3 text-white font-bold transition-all hover:bg-red-500/10 hover:border-red-500 hover:text-red-500 active:scale-95 w-full">
                                <span class="material-symbols-outlined relative z-10">person_remove</span>
                                <span class="relative z-10 tracking-wider">UNFOLLOW</span>
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-controller="Users" asp-action="Follow" asp-route-userId="@Model.Id" method="post" class="w-full md:w-auto">
                            <button type="submit" class="group relative flex items-center justify-center gap-2 overflow-hidden rounded-xl bg-primary px-8 py-3 text-white font-bold transition-all hover:scale-105 hover:shadow-[0_0_20px_rgba(229,6,214,0.6)] active:scale-95 w-full">
                                <div class="absolute inset-0 bg-white/20 translate-y-full transition-transform group-hover:translate-y-0 duration-300"></div>
                                <span class="material-symbols-outlined relative z-10">person_add</span>
                                <span class="relative z-10 tracking-wider">FOLLOW</span>
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>

        <div class="mt-12">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
                <div class="bg-white/5 backdrop-blur-sm border border-white/5 rounded-xl p-6 flex flex-col gap-1 hover:border-primary/30 transition-colors group">
                    <div class="flex justify-between items-start">
                        <span class="text-gray-400 text-sm font-medium uppercase tracking-wider">Victories</span>
                        <span class="material-symbols-outlined text-primary/50 group-hover:text-primary group-hover:scale-110 transition-all">trophy</span>
                    </div>
                    <span class="text-3xl font-bold text-white mt-2">@Model.Victories</span>
                    <span class="text-xs text-green-400 flex items-center gap-1"><span class="material-symbols-outlined text-xs">trending_up</span> Active Duelist</span>
                </div>
                <div class="bg-white/5 backdrop-blur-sm border border-white/5 rounded-xl p-6 flex flex-col gap-1 hover:border-primary/30 transition-colors group">
                    <div class="flex justify-between items-start">
                        <span class="text-gray-400 text-sm font-medium uppercase tracking-wider">Followers</span>
                        <span class="material-symbols-outlined text-primary/50 group-hover:text-primary group-hover:scale-110 transition-all">group</span>
                    </div>
                    <span class="text-3xl font-bold text-white mt-2">@Model.FollowersCount</span>
                    <span class="text-xs text-gray-500">Growing community</span>
                </div>
                <div class="bg-white/5 backdrop-blur-sm border border-white/5 rounded-xl p-6 flex flex-col gap-1 hover:border-primary/30 transition-colors group">
                    <div class="flex justify-between items-start">
                        <span class="text-gray-400 text-sm font-medium uppercase tracking-wider">Following</span>
                        <span class="material-symbols-outlined text-primary/50 group-hover:text-primary group-hover:scale-110 transition-all">person_search</span>
                    </div>
                    <span class="text-3xl font-bold text-white mt-2">@Model.FollowingCount</span>
                    <span class="text-xs text-primary">Allies</span>
                </div>
            </div>

            @if (Model.HasAccess)
            {
                <div class="border-b border-white/10 mt-4 mb-6">
                    <div class="flex gap-8">
                        <a class="relative pb-4 px-2 text-white font-bold text-sm tracking-wide cursor-pointer group" href="#">
                            <div class="flex items-center gap-2">
                                <span class="material-symbols-outlined text-primary">history_edu</span>
                                Posts
                            </div>
                            <div class="absolute bottom-0 left-0 w-full h-0.5 bg-primary shadow-[0_0_10px_#e506d6]"></div>
                        </a>
                    </div>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    @inject UserManager<ApplicationUser> UserManager
                    @if (Model.UserPosts.Any())
                    {
                        @foreach (var post in Model.UserPosts)
                        {
                            var currentUserId = UserManager.GetUserId(User);
                            bool isLikedByMe = post.Likes != null && post.Likes.Any(l => l.UserId == currentUserId);
                            int likeCount = post.Likes?.Count ?? 0;
                            // Comentarii count
                            int commentCount = post.Comments?.Count ?? 0;

                            <div class="group relative bg-white/5 border border-white/10 rounded-2xl overflow-hidden hover:-translate-y-1 hover:border-primary/50 hover:shadow-[0_10px_30px_-10px_rgba(0,0,0,0.5)] transition-all duration-300">

                                <div class="aspect-[4/3] w-full bg-cover bg-center relative"
                                     style='background-image: url("@(post.ImageUrl ?? "https://placehold.co/600x400")");'>

                                    <a href="/Posts/Details/@post.Id"
                                       class="absolute top-3 right-3 z-30 flex items-center justify-center size-9 rounded-full bg-white/90 backdrop-blur-md shadow-[0_0_15px_rgba(0,0,0,0.5)] text-black transition-transform hover:scale-110 active:scale-95 group/bubble"
                                       title="View Comments">
                                        <span class="material-symbols-outlined text-[20px] group-hover/bubble:text-primary transition-colors">chat_bubble</span>
                                        @if (commentCount > 0)
                                        {
                                            <span class="absolute -top-1 -right-1 flex h-4 w-4 items-center justify-center rounded-full bg-primary text-[9px] font-bold text-white shadow-sm">
                                                @commentCount
                                            </span>
                                        }
                                    </a>

                                    <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex flex-col items-center justify-center gap-2 backdrop-blur-[2px]">

                                        @if (Model.IsCurrentUser)
                                        {
                                            <a href="/Posts/Edit/@post.Id?returnUrl=@Context.Request.Path@Context.Request.QueryString"
                                               class="bg-white/10 border border-white/20 text-white px-6 py-2 rounded-full font-bold transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300 text-sm hover:bg-white hover:text-black flex items-center gap-2">
                                                <span class="material-symbols-outlined text-sm">edit</span> Edit
                                            </a>
                                        }

                                        @if (Model.IsCurrentUser || User.IsInRole("Admin"))
                                        {
                                            <form asp-controller="Posts" asp-action="Delete" asp-route-id="@post.Id"
                                                  asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"
                                                  method="post" onsubmit="return confirm('Are you sure you want to delete this artifact?');">
                                                <button type="submit" class="bg-red-500/10 border border-red-500/50 text-red-500 px-6 py-2 rounded-full font-bold transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300 text-sm hover:bg-red-500 hover:text-white flex items-center gap-2 mt-2">
                                                    <span class="material-symbols-outlined text-sm">delete</span> Delete
                                                </button>
                                            </form>
                                        }

                                        @if (!Model.IsCurrentUser && !User.IsInRole("Admin"))
                                        {
                                            <button class="bg-white text-black px-6 py-2 rounded-full font-bold transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300 text-sm">
                                                View Details
                                            </button>
                                        }
                                    </div>
                                </div>

                                <div class="p-4 bg-[#1a1a1a]/80 backdrop-blur-sm">
                                    <h3 class="text-sm font-bold text-white mb-1 group-hover:text-primary transition-colors truncate">
                                        @post.Description
                                    </h3>

                                    <div class="flex justify-between items-center mt-3 border-t border-white/5 pt-3">
                                        <div class="flex items-center gap-1.5 text-xs text-gray-400">
                                            <span class="material-symbols-outlined text-sm">calendar_today</span>
                                            <span>@post.CreatedAt.ToString("dd MMM")</span>
                                        </div>

                                        <form asp-controller="Home" asp-action="ToggleLike" method="post" class="relative z-10">
                                            <input type="hidden" name="postId" value="@post.Id" />
                                            <button type="submit"
                                                    class="flex items-center gap-1 text-xs font-bold transition-colors cursor-pointer p-1 rounded
                                                                @(isLikedByMe ? "text-primary" : "text-gray-400 hover:text-white")">
                                                <span class="material-symbols-outlined text-sm transition-transform active:scale-90">
                                                    @(isLikedByMe ? "favorite" : "favorite_border")
                                                </span>
                                                <span>@likeCount</span>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-span-1 sm:col-span-2 lg:col-span-3 flex flex-col items-center justify-center border-2 border-dashed border-gray-800 rounded-2xl bg-black/20 p-12 text-center text-gray-500">
                            <span class="material-symbols-outlined text-4xl mb-2">imagesmode</span>
                            <p class="text-sm">No artwork shared yet.</p>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="flex flex-col items-center justify-center py-24 px-4 text-center bg-white/5 border border-white/10 rounded-2xl backdrop-blur-sm mt-8 relative overflow-hidden">
                    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-primary/10 blur-[100px] rounded-full pointer-events-none"></div>
                    <div class="w-20 h-20 rounded-full bg-[#121212] border border-white/10 flex items-center justify-center mb-6 shadow-2xl relative z-10">
                        <span class="material-symbols-outlined text-4xl text-gray-400">lock</span>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-2 relative z-10">This Account is Private</h3>
                    <p class="text-gray-400 max-w-sm mb-8 relative z-10">
                        Follow this artist to see their battle history, stats, and gallery.
                    </p>
                    <div class="text-xs text-primary font-bold uppercase tracking-widest opacity-60 relative z-10">
                        REQUEST ACCESS ABOVE
                    </div>
                </div>
            }
        </div>
    </main>

    <footer class="border-t border-white/10 bg-[#0a0a0a] py-8 mt-auto">
        <div class="max-w-[1200px] mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-4">
            <p class="text-gray-500 text-sm">© 2024 ClashArt. The Arena Awaits.</p>
        </div>
    </footer>
</body>
</html>