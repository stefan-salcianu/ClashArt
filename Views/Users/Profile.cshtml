@model ClashArt.Models.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = Model.DisplayName;
    Layout = null; // Setăm null temporar ca să folosim structura ta HTML completă.
                   // Dacă ai un _Layout.cshtml deja configurat cu Tailwind, șterge liniile de <head> și <body> de mai jos.
}

<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"] - ClashArt</title>

    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Noto+Sans:wght@400;500;700&display=swap" rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#e506d6",
                        "background-light": "#f8f5f8",
                        "background-dark": "#121212",
                        "card-dark": "#1e1e1e",
                        "neon-glow": "#e506d6",
                    },
                    fontFamily: {
                        "display": ["Space Grotesk", "sans-serif"],
                        "body": ["Noto Sans", "sans-serif"],
                    },
                },
            },
        }
    </script>
    <style>
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #121212;
        }

        ::-webkit-scrollbar-thumb {
            background: #333;
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #e506d6;
            }
    </style>
</head>

<body class="bg-background-light dark:bg-background-dark font-display text-white overflow-x-hidden min-h-screen flex flex-col">

    <header class="sticky top-0 z-50 flex items-center justify-between whitespace-nowrap border-b border-white/10 bg-[#121212]/90 backdrop-blur-md px-6 py-4 lg:px-10">
        <div class="flex items-center gap-8">
            <a href="/" class="flex items-center gap-3 text-white no-underline">
                <div class="flex items-center justify-center size-8 rounded bg-primary/20 text-primary">
                    <span class="material-symbols-outlined text-2xl">brush</span>
                </div>
                <h2 class="text-white text-xl font-bold leading-tight tracking-[-0.015em]">ClashArt</h2>
            </a>
            <nav class="hidden md:flex items-center gap-8">
                <a class="text-white/80 hover:text-primary transition-colors text-sm font-medium leading-normal" href="#">Arena</a>
                <a class="text-white/80 hover:text-primary transition-colors text-sm font-medium leading-normal" href="#">Leaderboard</a>
            </nav>
        </div>

        <div class="flex flex-1 justify-end gap-6">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="flex items-center gap-3">
                    <span class="text-sm text-gray-400">Salut, @Model.DisplayName</span>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="text-sm font-bold text-primary hover:text-white transition-colors">Logout</button>
                    </form>
                </div>
            }
            else
            {
                <div class="flex gap-3">
                    <a asp-area="Identity" asp-page="/Account/Login" class="flex items-center justify-center rounded-lg h-10 px-4 bg-white/5 hover:bg-white/10 border border-white/10 text-white text-sm font-bold transition-colors">Login</a>
                </div>
            }
        </div>
    </header>

    <main class="flex-1 w-full max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8 py-8 flex flex-col gap-8">

        <div class="w-full rounded-2xl overflow-hidden relative min-h-[300px] md:min-h-[380px] shadow-2xl border border-white/5 group">
            <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                 style='background-image: url("https://images.unsplash.com/photo-1535930749574-1399327ce78f?q=80&w=2536&auto=format&fit=crop");'>
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-[#121212] via-[#121212]/40 to-transparent"></div>

            <div class="absolute top-4 right-4 bg-black/60 backdrop-blur-md rounded-full px-4 py-1.5 border border-primary/30 flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                <span class="text-xs font-medium text-white/90">Online in Arena</span>
            </div>
        </div>

        <div class="relative -mt-24 px-4 md:px-8">
            <div class="flex flex-col md:flex-row gap-6 md:items-end">

                <div class="relative group/avatar">
                    <div class="w-32 h-32 md:w-40 md:h-40 rounded-full border-4 border-[#121212] relative z-10 overflow-hidden bg-[#2a2a2a] shadow-[0_0_20px_rgba(229,6,214,0.3)]">
                        <img src="@(Model.AvatarUrl ?? "https://placehold.co/400")"
                             class="w-full h-full object-cover"
                             alt="@Model.DisplayName Avatar" />
                    </div>

                    <div class="absolute -bottom-2 -right-2 md:right-0 z-20 bg-[#121212] rounded-full p-1">
                        <div class="bg-gradient-to-tr from-primary to-purple-600 text-white text-xs font-bold px-3 py-1 rounded-full border border-white/20 shadow-lg">
                            LVL @Model.Level
                        </div>
                    </div>
                </div>

                <div class="flex-1 flex flex-col gap-2 pb-2">
                    <div class="flex flex-col md:flex-row md:items-center gap-3">
                        <h1 class="text-3xl md:text-4xl font-bold text-white tracking-tight">@Model.DisplayName</h1>

                        <div class="flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 border border-primary/30 text-primary shadow-[0_0_10px_rgba(229,6,214,0.15)] w-fit">
                            <span class="material-symbols-outlined text-sm">verified</span>
                            <span class="text-xs font-bold uppercase tracking-wider">Art Warlord</span>
                        </div>
                    </div>

                    <p class="text-gray-400 max-w-2xl text-base font-light">
                        @(Model.Bio ?? "Acest artist este un mister. Încă nu și-a scris povestea.")
                    </p>
                </div>

                <div class="flex pb-2">
                    @if (Model.IsCurrentUser)
                    {
                        <a asp-controller="Users" asp-action="Edit" class="group relative flex items-center justify-center gap-2 overflow-hidden rounded-xl bg-white/10 border border-white/20 px-8 py-3 text-white font-bold transition-all hover:bg-white/20 hover:scale-105 active:scale-95 w-full md:w-auto no-underline">
                            <span class="material-symbols-outlined relative z-10">edit</span>
                            <span class="relative z-10 tracking-wider">EDIT PROFILE</span>
                        </a>
                    }
                    else
                    {
                        <button class="group relative flex items-center justify-center gap-2 overflow-hidden rounded-xl bg-primary px-8 py-3 text-white font-bold transition-all hover:scale-105 hover:shadow-[0_0_20px_rgba(229,6,214,0.6)] active:scale-95 w-full md:w-auto">
                            <div class="absolute inset-0 bg-white/20 translate-y-full transition-transform group-hover:translate-y-0 duration-300"></div>
                            <span class="material-symbols-outlined relative z-10">swords</span>
                            <span class="relative z-10 tracking-wider">CHALLENGE</span>
                        </button>
                    }
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="bg-white/5 backdrop-blur-sm border border-white/5 rounded-xl p-6 flex flex-col gap-1 hover:border-primary/30 transition-colors group">
                <div class="flex justify-between items-start">
                    <span class="text-gray-400 text-sm font-medium uppercase tracking-wider">Victories</span>
                    <span class="material-symbols-outlined text-primary/50 group-hover:text-primary group-hover:scale-110 transition-all">trophy</span>
                </div>
                <span class="text-3xl font-bold text-white mt-2">@Model.Victories</span>
                <span class="text-xs text-green-400 flex items-center gap-1">
                    <span class="material-symbols-outlined text-xs">trending_up</span> Active Duelist
                </span>
            </div>

            <div class="bg-white/5 backdrop-blur-sm border border-white/5 rounded-xl p-6 flex flex-col gap-1 hover:border-primary/30 transition-colors group">
                <div class="flex justify-between items-start">
                    <span class="text-gray-400 text-sm font-medium uppercase tracking-wider">Followers</span>
                    <span class="material-symbols-outlined text-primary/50 group-hover:text-primary group-hover:scale-110 transition-all">group</span>
                </div>
                <span class="text-3xl font-bold text-white mt-2">@Model.FollowersCount</span>
                <span class="text-xs text-gray-500">Growing community</span>
            </div>

            <div class="bg-white/5 backdrop-blur-sm border border-white/5 rounded-xl p-6 flex flex-col gap-1 hover:border-primary/30 transition-colors group">
                <div class="flex justify-between items-start">
                    <span class="text-gray-400 text-sm font-medium uppercase tracking-wider">Total Votes</span>
                    <span class="material-symbols-outlined text-primary/50 group-hover:text-primary group-hover:scale-110 transition-all">thumb_up</span>
                </div>
                <span class="text-3xl font-bold text-white mt-2">12.5k</span>
                <span class="text-xs text-primary">Fan favorite</span>
            </div>
        </div>

        <div class="border-b border-white/10 mt-4">
            <div class="flex gap-8">
                <a class="relative pb-4 px-2 text-white font-bold text-sm tracking-wide cursor-pointer group" href="#">
                    <div class="flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">history_edu</span>
                        Battle History
                    </div>
                    <div class="absolute bottom-0 left-0 w-full h-0.5 bg-primary shadow-[0_0_10px_#e506d6]"></div>
                </a>
                <a class="relative pb-4 px-2 text-gray-500 hover:text-white transition-colors font-medium text-sm tracking-wide cursor-pointer group" href="#">
                    <div class="flex items-center gap-2">
                        <span class="material-symbols-outlined">model_training</span>
                        Training Grounds
                    </div>
                    <div class="absolute bottom-0 left-0 w-full h-0.5 bg-transparent group-hover:bg-white/20 transition-colors"></div>
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="group relative bg-white/5 border border-white/10 rounded-2xl overflow-hidden hover:-translate-y-1 hover:border-primary/50 hover:shadow-[0_10px_30px_-10px_rgba(0,0,0,0.5)] transition-all duration-300">
                <div class="aspect-[4/3] w-full bg-cover bg-center relative" style='background-image: url("https://images.unsplash.com/photo-1563089145-599997674d42?q=80&w=2370&auto=format&fit=crop");'>
                    <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center backdrop-blur-[2px]">
                        <button class="bg-white text-black px-6 py-2 rounded-full font-bold transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300 text-sm">View Details</button>
                    </div>
                    <div class="absolute top-3 left-3">
                        <span class="bg-primary/90 text-white text-[10px] font-bold px-2 py-1 rounded border border-white/20 uppercase tracking-wider shadow-lg">Victory</span>
                    </div>
                </div>
                <div class="p-4 bg-[#1a1a1a]/80 backdrop-blur-sm">
                    <h3 class="text-lg font-bold text-white mb-1 group-hover:text-primary transition-colors">Neon Samurai</h3>
                    <div class="flex justify-between items-center mt-3 border-t border-white/5 pt-3">
                        <div class="flex items-center gap-1.5 text-xs text-gray-400">
                            <span class="material-symbols-outlined text-sm">calendar_today</span>
                            <span>2 days ago</span>
                        </div>
                        <div class="flex items-center gap-1 text-primary text-xs font-bold">
                            <span class="material-symbols-outlined text-sm">favorite</span>
                            <span>2.4k</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-span-1 sm:col-span-2 lg:col-span-2 flex items-center justify-center border-2 border-dashed border-gray-800 rounded-2xl bg-black/20 p-12 text-center text-gray-500">
                <div>
                    <span class="material-symbols-outlined text-4xl mb-2">imagesmode</span>
                    <p class="text-sm">More battle history coming soon from @Model.DisplayName</p>
                </div>
            </div>

        </div>

    </main>

    <footer class="border-t border-white/10 bg-[#0a0a0a] py-8 mt-auto">
        <div class="max-w-[1200px] mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-4">
            <p class="text-gray-500 text-sm">© 2024 ClashArt. The Arena Awaits.</p>
        </div>
    </footer>
</body>
</html>