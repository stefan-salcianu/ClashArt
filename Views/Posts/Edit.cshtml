@model ClashArt.Models.Post

@{
    ViewData["Title"] = "Edit Artifact";
}

<div class="flex-1 flex flex-col items-center justify-center py-24 px-4 sm:px-6 lg:px-8 relative min-h-screen">
    <div class="absolute top-20 left-1/4 h-96 w-96 rounded-full bg-primary/10 blur-[100px] pointer-events-none"></div>
    <div class="absolute bottom-20 right-1/4 h-80 w-80 rounded-full bg-secondary/10 blur-[100px] pointer-events-none"></div>

    <div class="w-full max-w-2xl relative z-10">
        <div class="text-center mb-10">
            <h1 class="text-4xl sm:text-5xl font-black tracking-tighter text-white mb-2">Edit Artifact</h1>
            <p class="text-gray-400">Refine your creation details.</p>
        </div>

        <form asp-action="Edit" enctype="multipart/form-data" class="space-y-8">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm font-bold text-center"></div>

            <div class="space-y-3">
                <label class="flex items-center gap-2 text-sm font-bold text-primary uppercase tracking-widest">
                    <span class="material-symbols-outlined text-primary text-sm">category</span>
                    Battle Theme
                </label>
                <div class="relative group">
                    <select asp-for="CompetitionThemeId" class="relative block w-full rounded-lg border-0 bg-[#1e1e1e] py-4 pl-4 pr-10 text-white placeholder:text-gray-400 focus:ring-2 focus:ring-primary focus:ring-inset sm:text-lg font-bold shadow-xl" asp-items="ViewBag.CompetitionThemeId">
                    </select>
                </div>
            </div>

            <div class="space-y-3">
                <label class="flex items-center gap-2 text-sm font-bold text-primary uppercase tracking-widest">
                    <span class="material-symbols-outlined text-primary text-sm">image</span>
                    Artwork
                </label>

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-2 p-2 rounded bg-black/40 border border-white/10 flex items-center gap-4">
                        <img src="@Model.ImageUrl" class="h-16 w-16 object-cover rounded" />
                        <span class="text-xs text-gray-400">Current Image Active</span>
                    </div>
                }

                <div class="relative group cursor-pointer">
                    <label for="imageUpload" class="relative flex flex-col items-center justify-center rounded-2xl border-2 border-dashed border-primary/50 px-6 py-8 text-center transition-all duration-300 hover:border-primary hover:bg-primary/10 cursor-pointer">
                        <span class="material-symbols-outlined text-3xl text-gray-400 mb-2">cloud_upload</span>
                        <h3 class="text-sm font-bold text-white">Change Image (Optional)</h3>
                        <img id="imagePreview" class="mt-4 max-h-48 rounded-lg hidden border border-white/20" />
                    </label>
                    <input type="file" id="imageUpload" name="imageFile" class="hidden" accept="image/*" onchange="previewFile(this, 'imagePreview')" />
                </div>
            </div>

            <div class="space-y-3">
                <label class="flex items-center gap-2 text-sm font-bold text-secondary uppercase tracking-widest">
                    <span class="material-symbols-outlined text-secondary text-sm">videocam</span>
                    Proof of Work (Timelapse)
                </label>

                @if (!string.IsNullOrEmpty(Model.ProofOfWorkVideoUrl))
                {
                    <div class="mb-4 rounded-xl overflow-hidden border border-secondary/30 bg-black/40">
                        <video controls class="w-full max-h-64 bg-black">
                            <source src="@Model.ProofOfWorkVideoUrl" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>

                        <div class="flex items-center justify-between p-3 border-t border-white/10">
                            <span class="text-xs text-secondary font-bold flex items-center gap-2">
                                <span class="material-symbols-outlined text-sm">check_circle</span>
                                Video Active
                            </span>

                            <button type="submit"
                                    asp-action="DeleteVideo"
                                    asp-route-id="@Model.Id"
                                    formnovalidate
                                    class="text-xs bg-red-500/10 hover:bg-red-500 hover:text-white text-red-500 px-3 py-1.5 rounded transition font-bold uppercase flex items-center gap-1">
                                <span class="material-symbols-outlined text-[14px]">delete</span>
                                Remove Video
                            </button>
                        </div>
                    </div>
                }

                <div class="relative group cursor-pointer w-full sm:w-3/4">
                    <label for="videoUpload" class="relative flex items-center gap-6 rounded-xl border border-secondary/30 bg-[#1e1e1e]/40 px-6 py-6 transition-all duration-300 hover:border-secondary hover:bg-secondary/5 hover:shadow-neon-blue cursor-pointer">
                        <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-lg bg-secondary/10 text-secondary border border-secondary/20 group-hover:bg-secondary group-hover:text-black transition-colors">
                            <span class="material-symbols-outlined text-2xl">videocam</span>
                        </div>
                        <div class="text-left flex-1">
                            <h3 class="text-sm font-bold text-white group-hover:text-secondary transition-colors" id="videoLabel">
                                @(string.IsNullOrEmpty(Model.ProofOfWorkVideoUrl) ? "Upload Video Proof" : "Replace Current Video")
                            </h3>
                            <p class="text-xs text-gray-400">MP4, MOV (Max 50MB)</p>
                        </div>
                        <div class="ml-auto">
                            <span class="material-symbols-outlined text-gray-500 group-hover:text-secondary">add_circle</span>
                        </div>
                    </label>
                    <input type="file" id="videoUpload" name="videoFile" class="hidden" accept="video/*" onchange="updateFileName(this, 'videoLabel')" />
                </div>
            </div>

            <div class="space-y-3">
                <label class="flex items-center gap-2 text-sm font-bold text-gray-300 uppercase tracking-widest">
                    <span class="material-symbols-outlined text-gray-400 text-sm">description</span>
                    Artist Manifesto
                </label>
                <div class="glass-panel rounded-xl p-1 bg-[#1e1e1e]/40">
                    <textarea asp-for="Description" class="block w-full rounded-lg border-0 bg-transparent py-3 px-4 text-white placeholder:text-gray-500 focus:ring-0 sm:text-sm" rows="4"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-red-500 text-xs"></span>
            </div>

            <div class="pt-6 flex gap-4">
                <a asp-controller="Home" asp-action="Index" class="w-1/3 py-4 rounded-lg bg-gray-700 text-white font-bold text-center hover:bg-gray-600 transition">Cancel</a>

                <button type="submit" class="group relative w-2/3 overflow-hidden rounded-lg bg-primary py-4 text-xl font-black uppercase tracking-widest text-white shadow-neon-pink transition-all hover:scale-[1.01]">
                    <span class="relative z-10 flex items-center justify-center gap-3">
                        Save Changes
                    </span>
                    <div class="absolute inset-0 -z-0 bg-gradient-to-r from-transparent via-white/20 to-transparent skew-x-12 opacity-0 transition-opacity duration-700 group-hover:animate-shine group-hover:opacity-100"></div>
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function previewFile(input, previewId) {
        var preview = document.getElementById(previewId);
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
                preview.classList.remove('hidden');
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    function updateFileName(input, labelId) {
        var label = document.getElementById(labelId);
        if (input.files && input.files[0]) {
            label.innerText = "Selected: " + input.files[0].name;
            label.classList.add("text-secondary");
        }
    }
</script>