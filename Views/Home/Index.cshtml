@using Microsoft.AspNetCore.Identity
@using ClashArt.Models

@model ClashArt.Models.HomeViewModel
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "The Arena";
    var currentUser = await UserManager.GetUserAsync(User);
    var currentUserId = currentUser?.Id;

    double progressPercentage = 0;
    long remainingSeconds = 0;
    TimeSpan remainingTime = TimeSpan.Zero;

    if (Model.ActiveTheme != null)
    {
        var totalDuration = (Model.ActiveTheme.EndDate - Model.ActiveTheme.StartDate).TotalSeconds;
        var elapsed = (DateTime.Now - Model.ActiveTheme.StartDate).TotalSeconds;

        if (totalDuration > 0)
        {
            progressPercentage = (elapsed / totalDuration) * 100;
            if (progressPercentage > 100) progressPercentage = 100;
        }

        var timeSpan = Model.ActiveTheme.EndDate - DateTime.Now;
        if (timeSpan.TotalSeconds > 0)
        {
            remainingSeconds = (long)timeSpan.TotalSeconds;
            remainingTime = timeSpan;
        }
    }
}

<style>
    .glass-panel {
        background: rgba(35, 35, 35, 0.4);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.05);
    }


    /* --- MASONRY SETUP PENTRU JS --- */
    /* Nu folosim grid sau columns aici, lăsăm JS-ul să calculeze pozițiile absolute */
    .masonry-grid-sizer,



    .masonry-item {
        width: 100%; /* Mobile: 1 coloană */
    }

    @@media (min-width: 640px) {
        .masonry-grid-sizer, .masonry-item

    {
        width: 50%; /* Tabletă: 2 coloane */
    }

    }

    @@media (min-width: 1024px) {
        .masonry-grid-sizer, .masonry-item

    {
        width: 33.333%; /* Desktop: 3 coloane */
    }

    }

    @@media (min-width: 1280px) {
        .masonry-grid-sizer, .masonry-item

    {
        width: 25%; /* Ecran mare: 4 coloane */
    }

    }
</style>

<div class="mx-auto flex w-full max-w-[1400px] flex-col px-4 py-8 md:px-8">

    @if (Model.ActiveTheme != null)
    {
        <section class="glass-panel relative mb-10 overflow-hidden rounded-xl border-l-4 border-l-primary p-0 shadow-xl">
            <div class="absolute inset-0 -z-10 bg-cover bg-center opacity-40"
                 style="background-image: url('@(string.IsNullOrEmpty(Model.ActiveTheme.ReferenceImageUrl) ? "https://images.unsplash.com/photo-1555680202-c86f0e12f086" : Model.ActiveTheme.ReferenceImageUrl)');">
            </div>
            <div class="absolute inset-0 -z-10 bg-gradient-to-r from-background-dark via-background-dark/80 to-transparent"></div>

            <div class="flex flex-col items-center justify-between gap-8 p-8 lg:flex-row">
                <div class="flex max-w-2xl flex-col gap-4">
                    <div class="flex items-center gap-3">
                        <span class="animate-pulse rounded bg-red-600 px-2 py-0.5 text-[10px] font-bold uppercase tracking-wider text-white shadow-lg">Live Battle</span>
                        <p class="text-sm font-medium text-accent-blue">Active Competition</p>
                    </div>

                    <h1 class="font-display text-4xl font-black uppercase italic leading-none tracking-tighter text-white sm:text-5xl lg:text-6xl text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-400">
                        @Model.ActiveTheme.Title
                    </h1>

                    <p class="max-w-md text-base text-gray-300">
                        @Model.ActiveTheme.Description
                    </p>

                    <div class="mt-2 w-full max-w-md">
                        <div class="flex justify-between text-xs font-medium uppercase text-text-subtle">
                            <span>Start</span>
                            <span class="text-white">@Math.Round(progressPercentage)% Complete</span>
                            <span>End</span>
                        </div>
                        <div class="mt-2 h-2 w-full overflow-hidden rounded-full bg-gray-800">
                            <div class="h-full rounded-full bg-gradient-to-r from-primary to-accent-blue shadow-neon"
                                 style="width: @((int)progressPercentage)%"></div>
                        </div>
                    </div>
                </div>

                <div class="flex flex-col items-center gap-4 rounded-xl border border-white/10 bg-black/40 p-6 backdrop-blur-sm">
                    <p class="text-xs font-bold uppercase tracking-widest text-text-subtle">Time Remaining</p>
                    <div class="flex gap-4" id="countdown-timer" data-seconds="@remainingSeconds">
                        <div class="flex flex-col items-center gap-1">
                            <div class="flex size-16 items-center justify-center rounded-lg bg-card-dark text-3xl font-black text-white shadow-inner" id="days">
                                @(remainingTime.Days.ToString("00"))
                            </div>
                            <span class="text-[10px] uppercase text-text-subtle">Days</span>
                        </div>
                        <span class="mt-2 text-2xl font-bold text-primary">:</span>
                        <div class="flex flex-col items-center gap-1">
                            <div class="flex size-16 items-center justify-center rounded-lg bg-card-dark text-3xl font-black text-white shadow-inner" id="hours">
                                @(remainingTime.Hours.ToString("00"))
                            </div>
                            <span class="text-[10px] uppercase text-text-subtle">Hours</span>
                        </div>
                        <span class="mt-2 text-2xl font-bold text-primary">:</span>
                        <div class="flex flex-col items-center gap-1">
                            <div class="flex size-16 items-center justify-center rounded-lg bg-card-dark text-3xl font-black text-white shadow-inner" id="minutes">
                                @(remainingTime.Minutes.ToString("00"))
                            </div>
                            <span class="text-[10px] uppercase text-text-subtle">Mins</span>
                        </div>
                    </div>

                    <a href="/Posts/Create" class="mt-2 w-full rounded-lg bg-primary py-3 px-6 text-sm font-bold uppercase tracking-wide text-white transition hover:bg-primary-hover hover:shadow-neon text-center">
                        Submit Entry
                    </a>
                </div>
            </div>
        </section>
    }
    else
    {
        <section class="glass-panel mb-10 p-8 text-center rounded-xl">
            <h1 class="text-3xl font-bold text-white">The Arena is Quiet...</h1>
            <p class="text-gray-400 mt-2">No active battles right now. Check back later!</p>
        </section>
    }

    @{
        // Citim filtrul curent ca să știm ce buton colorăm
        var currentSort = ViewData["CurrentSort"] as string ?? "newest";
    }

    <div class="mb-8 flex flex-wrap items-center justify-between gap-4">
        <div class="flex flex-wrap gap-2">

            <a href="@Url.Action("Index", new { sortOrder = "trending" })"
               class="flex items-center gap-2 rounded-full border px-4 py-2 text-sm font-semibold transition no-underline
               @(currentSort == "trending"
                                  ? "border-primary bg-primary text-white shadow-neon"
                                  : "border-white/10 bg-[#1e1e1e] text-text-subtle hover:bg-[#2a2a2a] hover:text-white")">
                <span class="material-symbols-outlined text-[18px]">local_fire_department</span> Trending
            </a>

            <a href="@Url.Action("Index", new { sortOrder = "newest" })"
               class="flex items-center gap-2 rounded-full border px-4 py-2 text-sm font-medium transition no-underline
               @(currentSort == "newest"
                                  ? "border-primary bg-primary text-white shadow-neon"
                                  : "border-white/10 bg-[#1e1e1e] text-text-subtle hover:bg-[#2a2a2a] hover:text-white")">
                <span class="material-symbols-outlined text-[18px]">public</span> Global
            </a>

        
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <a href="@Url.Action("Index", new { sortOrder = "following" })"
               class="flex items-center gap-2 rounded-full border px-4 py-2 text-sm font-medium transition no-underline
                           @(currentSort == "following"
                                                         ? "border-primary bg-primary text-white shadow-neon"
                                                         : "border-white/10 bg-[#1e1e1e] text-text-subtle hover:bg-[#2a2a2a] hover:text-white")">
            <span class="material-symbols-outlined text-[18px]">group</span> Following
        </a>
                }
    </div>

    <div id="masonry-container" class="w-full">

        <div class="masonry-grid-sizer"></div>

        @foreach (var post in Model.Posts)
        {
            bool isLikedByMe = post.Likes != null && post.Likes.Any(l => l.UserId == currentUserId);
            int likeCount = post.Likes?.Count ?? 0;
            bool isOwner = currentUserId != null && post.UserId == currentUserId;


            <article class="masonry-item group relative overflow-hidden rounded-xl bg-card-dark shadow-lg transition-transform hover:-translate-y-1">
                <div class="relative overflow-hidden">
                    <img src="@post.ImageUrl" alt="Art" class="h-auto w-full object-cover transition duration-500 group-hover:scale-105" />

                    @if (post.Theme != null && post.Theme.Title != "Freestyle Gallery")
                    {
                        <div class="absolute right-3 top-3 rounded bg-black/60 px-2 py-1 text-xs font-bold text-primary backdrop-blur-md border border-primary/30 z-10">
                            @post.Theme.Title
                        </div>
                    }
                    <div class="absolute bottom-0 left-0 h-24 w-full bg-gradient-to-t from-black/90 to-transparent pointer-events-none"></div>
                </div>

                <div class="p-4 pt-2">
                    <h3 class="line-clamp-2 text-sm font-bold text-white leading-snug">
                        @post.Description
                    </h3>

                    <div class="mt-4 flex items-center justify-between">
                        <a asp-controller="Users" asp-action="Profile" asp-route-id="@post.UserId" class="flex items-center gap-2 no-underline hover:opacity-80 transition-opacity">
                            <div class="size-8 rounded-full bg-gray-700 bg-cover bg-center ring-2 ring-black"
                                 style="background-image: url('@(string.IsNullOrEmpty(post.User?.AvatarUrl) ? "https://i.pravatar.cc/150" : post.User.AvatarUrl)')">
                            </div>
                            <span class="text-sm font-medium text-gray-300">
                                @(post.User?.DisplayName ?? "Unknown")
                            </span>
                        </a>

                        <div class="flex items-center gap-2">
                            @if (currentUserId != null)
                            {
                                // EDIT: Doar Owner
                                @if (isOwner)
                                {
                                    <a asp-controller="Posts" asp-action="Edit" asp-route-id="@post.Id"
                                       asp-route-returnUrl="/Home/Index"
                                       class="flex items-center justify-center size-8 rounded-full bg-gray-800 text-gray-400 hover:text-white hover:bg-gray-700 transition" title="Edit">
                                        <span class="material-symbols-outlined text-[16px]">edit</span>
                                    </a>
                                }

                                // DELETE: Admin SAU Owner
                                @if (isOwner || User.IsInRole("Admin"))
                                {
                                    <form asp-controller="Posts" asp-action="Delete" asp-route-id="@post.Id"
                                          asp-route-returnUrl="/Home/Index"
                                          method="post"
                                          onsubmit="return confirm('Sigur vrei să ștergi această lucrare?');">
                                        <button type="submit" class="flex items-center justify-center size-8 rounded-full bg-gray-800 text-red-500 hover:bg-red-900/30 transition" title="Delete">
                                            <span class="material-symbols-outlined text-[16px]">delete</span>
                                        </button>
                                    </form>
                                }


                                <form asp-controller="Home" asp-action="ToggleLike" method="post">
                                    <input type="hidden" name="postId" value="@post.Id" />

                                    <button type="submit"
                                            class="flex items-center gap-1.5 rounded-full bg-[#121212] border px-3 py-1.5 transition group/btn
                                                @(isLikedByMe ? "border-primary/50 bg-primary/10" : "border-white/10 hover:bg-white/5 hover:border-primary/30")">

                                        <span class="material-symbols-outlined text-[18px] transition-colors duration-300
                                                  @(isLikedByMe ? "text-primary scale-110" : "text-gray-400 group-hover/btn:text-primary")">
                                            @(isLikedByMe ? "favorite" : "favorite_border")
                                        </span>

                                        <span class="text-xs font-bold transition-colors
                                                  @(isLikedByMe ? "text-primary" : "text-gray-400 group-hover/btn:text-white")">
                                            @likeCount
                                        </span>
                                    </button>
                                </form>

                            }

                            
                        </div>
                    </div>
                </article>
        }
    </div>
</div>

<div class="fixed bottom-8 right-8 z-40">
    <a href="/Posts/Create" class="group flex items-center gap-2 rounded-full bg-primary px-6 py-4 shadow-[0_0_20px_rgba(229,6,214,0.6)] transition-all hover:-translate-y-1 hover:bg-primary-hover hover:shadow-[0_0_30px_rgba(229,6,214,0.8)] active:scale-95">
        <span class="material-symbols-outlined text-white">add_photo_alternate</span>
        <span class="text-base font-bold text-white">Submit Artwork</span>
    </a>
</div>

<script src="https://unpkg.com/imagesloaded@5/imagesloaded.pkgd.min.js"></script>
<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function() {

        // --- TIMER LOGIC ---
        const timerElement = document.getElementById("countdown-timer");
        if (timerElement) {
            let totalSeconds = parseInt(timerElement.getAttribute("data-seconds"));
            function updateTimer() {
                if (totalSeconds <= 0) return;
                totalSeconds--;
                const days = Math.floor(totalSeconds / (3600 * 24));
                const hours = Math.floor((totalSeconds % (3600 * 24)) / 3600);
                const minutes = Math.floor((totalSeconds % 3600) / 60);

                const elDays = document.getElementById("days");
                const elHours = document.getElementById("hours");
                const elMins = document.getElementById("minutes");

                if(elDays) elDays.innerText = String(days).padStart(2, '0');
                if(elHours) elHours.innerText = String(hours).padStart(2, '0');
                if(elMins) elMins.innerText = String(minutes).padStart(2, '0');
            }
            setInterval(updateTimer, 1000);
        }

        // --- MASONRY LOGIC ---
        var grid = document.querySelector('#masonry-container');
        if(grid) {
            imagesLoaded( grid, function() {
                new Masonry( grid, {
                    itemSelector: '.masonry-item',
                    columnWidth: '.masonry-grid-sizer',
                    percentPosition: true
                });
                grid.style.opacity = 1;
            });
        }
    });
</script>