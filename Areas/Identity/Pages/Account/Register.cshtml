@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null; // Important: Fără layout standard, folosim design-ul tău full-screen
}

<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClashArt</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#e506d6",
                        "primary-dark": "#b005a4",
                        "accent-blue": "#00f0ff",
                        "accent-blue-dark": "#00a8b3",
                        "background-dark": "#121212",
                        "surface-dark": "#1e1e1e",
                        "input-bg": "#2A2A2A",
                        "input-border": "#404040",
                    },
                    fontFamily: { "display": ["Inter", "sans-serif"] },
                    boxShadow: {
                        "neon": "0 0 20px rgba(229, 6, 214, 0.3)",
                        "neon-blue": "0 0 20px rgba(0, 240, 255, 0.3)",
                    }
                },
            },
        }
    </script>
    <style>
        .bg-shape-1 {
            background: radial-gradient(circle at center, rgba(229, 6, 214, 0.15) 0%, rgba(229, 6, 214, 0) 70%);
        }

        .bg-shape-2 {
            background: radial-gradient(circle at center, rgba(0, 240, 255, 0.1) 0%, rgba(0, 240, 255, 0) 70%);
        }

        .glass-panel {
            background: rgba(30, 30, 30, 0.6);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.08);
        }
    </style>
</head>
<body class="bg-background-dark text-white font-display min-h-screen flex items-center justify-center relative overflow-hidden selection:bg-primary selection:text-white">

    <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none z-0">
        <div class="absolute -top-[10%] -left-[10%] w-[50%] h-[50%] bg-shape-1 blur-3xl opacity-60"></div>
        <div class="absolute top-[40%] -right-[10%] w-[60%] h-[60%] bg-shape-2 blur-3xl opacity-50"></div>
    </div>

    <div class="relative z-10 w-full max-w-md px-4 py-8">

        <div class="flex flex-col items-center mb-8">
            <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-primary mb-4 shadow-neon">
                <span class="material-symbols-outlined text-white text-2xl">brush</span>
            </div>
            <h1 class="text-3xl font-black tracking-tighter text-white mb-2">ClashArt</h1>
            <p class="text-gray-400 text-sm font-medium">Ignite Your Creativity. Join the Arena.</p>
        </div>

        <div class="glass-panel rounded-2xl p-8 shadow-2xl">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="flex flex-col gap-5">

                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm font-bold text-center"></div>

                <div class="space-y-1.5">
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-300">Email Address</label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="material-symbols-outlined text-gray-500 text-[20px] group-focus-within:text-primary transition-colors">mail</span>
                        </div>
                        <input asp-for="Input.Email" class="block w-full pl-10 pr-3 py-3 bg-input-bg border border-input-border rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all duration-200 sm:text-sm" placeholder="you@example.com" autocomplete="username" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-red-500 text-xs"></span>
                </div>

                <div class="space-y-1.5">
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-300">Password</label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="material-symbols-outlined text-gray-500 text-[20px] group-focus-within:text-primary transition-colors">lock</span>
                        </div>
                        <input asp-for="Input.Password" class="block w-full pl-10 pr-10 py-3 bg-input-bg border border-input-border rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all duration-200 sm:text-sm" placeholder="••••••••" autocomplete="new-password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
                </div>

                <div class="space-y-1.5">
                    <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-300">Confirm Password</label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="material-symbols-outlined text-gray-500 text-[20px] group-focus-within:text-primary transition-colors">lock_reset</span>
                        </div>
                        <input asp-for="Input.ConfirmPassword" class="block w-full pl-10 pr-10 py-3 bg-input-bg border border-input-border rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all duration-200 sm:text-sm" placeholder="••••••••" autocomplete="new-password" />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-xs"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-full mt-2 flex justify-center py-3.5 px-4 border border-transparent rounded-lg shadow-neon-blue text-sm font-bold text-black bg-accent-blue hover:bg-accent-blue-dark hover:text-white hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-accent-blue transition-all duration-300 transform hover:-translate-y-0.5">
                    Create Account
                </button>

            </form>

            <div class="mt-8 text-center">
                <p class="text-sm text-gray-400">
                    Already a member?
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="font-semibold text-primary hover:text-primary-dark hover:underline transition-colors">Log In</a>
                </p>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}